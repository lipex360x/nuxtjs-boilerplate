module.exports = {
  description: 'Description',
  prompts: [
    {
      type: 'input',
      name: 'name',
      message: 'Text',
      validate: (value) => {
        if (!value) {
          return 'Value is required'
        }
        return true
      }
    }

    // snippet: promptTemplate
  ],

  actions: (data) => {

    const file = {
      path: `../../pages`,
      name: data.name,
      class: `${data.type + 's'}-${data.name.toLowerCase()}`,
      scripts: data.scripts
    }

    const action = [
      {
        type: 'add',
        path: `${file.path}/{{ pascalCase name }}.vue`,
        templateFile: './{{name}}/templates/{{template}}.hbs'
      },

      function (data) {
        return `File ${data.name} created`
      }
    ]
    return action
  }
}


